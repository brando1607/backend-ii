<div>
    <h1> Welcome to the virtual store</h1>
</div>
<div>
    <a href="/current">Profile</a>
    <a href="/cart">Cart</a>

</div>

{{#if thereAreProducts}}

{{#each products}}

<form action="/api/cart/add-to-cart" method="POST">
    <div class="product">

        <div class="input-container">
            Name <input class="productElement" type="text" name="name" value="{{this.name}}" readonly>

        </div>
        <div class="input-container">
            Price $<input class="productElement" type="text" name="price" value=" {{this.price}}" readonly>

        </div>
        <div class="input-container">
            Available<input class="productElement" type="text" name="stock" value="{{this.stock}}" readonly>
        </div>
        <div class="input-container">
            Sold by<input class="productElement" type="text" name="seller" value="{{this.seller}}" readonly>
        </div>

        <button> Add to cart</button>
    </div>
</form>

{{/each}}
{{else}}
<p>There aren't any products at the moment</p>
{{/if}}